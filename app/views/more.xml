<Alloy>
    <View id="more">
        <View class="header" platform="ios">
            <Require src="components/menuButton" id="menuButton" />
            <Label class="headerTitle" />
        </View>

        <ScrollView class="content">
            <View class="contentContainer">
                <View class="contentRow">
                    <Label class="title" id="quote" />
                    <Label class="paragraph" id="motivation" />
                    <Label class="author" id="motivationAuthor" />
                </View>

                <View class="contentRow">
                    <Label class="title" id="tocTitle" />
                    <Label class="paragraph" id="toc" />
                    <Label class="link" id="tocLink" onClick="onClickVisitTOC" />
                </View>

                <View class="contentRow">
                    <Label class="title" id="goalTitle" />
                    <Label class="paragraph" id="goal" />
                    <Label class="link" id="goalLink" onClick="onClickContactProject" />
                </View>

                <View class="contentRow">
                    <Label class="title" id="teamTitle" />
                    <Label class="paragraph" id="team" />
                </View>

            </View>
        </ScrollView>
    </View>
</Alloy>
