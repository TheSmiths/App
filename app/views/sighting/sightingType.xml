<Alloy>
    <Window id="sightingType">
        <View class="header">
            <Require src="components/closeButton" onClick="closeWindow" platform="ios"/>
            <Label id="headerTitle" class="headerTitle" platform="ios"/>
            <Label id="headerSubTitle" class="headerSubTitle" />
            <Require src="components/guideButton" id="guideButton" topic="amount" platform="ios"/>
        </View>

        <Menu platform="android">
            <Require src="components/guideButton" id="guideButton" topic="amount" />
        </Menu>

        <ScrollView class="content">
            <View class="gridContainer">
                <Require id="grid" src="components/grid" onClick="onClickGrid" />
            </View>
        </ScrollView>
    </Window>
</Alloy>
